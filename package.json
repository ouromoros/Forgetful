{
  "name": "Forgetful",
  "version": "0.0.0",
  "description": "Fast search code snippet manager.",
  "productName": "Forgetful",
  "main": "main.js",
  "scripts": {
    "lint": "eslint app",
    "watch": "webpack --watch",
    "start": "electron ./main.js",
    "packDev": "webpack --display-modules --mode development",
    "pack": "webpack --mode production"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ouromoros/Forgetful.git"
  },
  "keywords": [
    "js",
    "electron",
    "desktop"
  ],
  "author": "ouromoros",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "babel-loader": "^8.3.0",
    "css-loader": "^6.7.3",
    "electron": "^8.1.0",
    "eslint": "^6.8.0",
    "node-sass": "^4.13.1",
    "sass-loader": "^13.2.0",
    "style-loader": "^1.3.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.5",
    "@material-ui/icons": "^4.9.1",
    "elasticlunr": "^0.9.5",
    "nedb": "^1.8.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "winston": "^3.2.1"
  },
  "build": {
    "appId": "com.ouromoros.coder",
    "mac": {
      "category": "public.app-category.productivity",
      "publish": [
        "github"
      ],
      "darkModeSupport": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "7z",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "category": "Development",
      "target": [
        "AppImage",
        "snap"
      ],
      "publish": [
        "github"
      ]
    }
  }
}
